generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  employee_id String   @unique
  name        String
  email       String   @unique
  password    String
  role        String   @default("EMPLOYEE")
  status      Boolean  @default(true)
  created_at  DateTime @default(now()) @db.Date
  attendance  Attendance[]
}

model Attendance {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  employee_id String
  user        User     @relation(fields: [employee_id], references: [employee_id])
  date        String   // YYYY-MM-DD (keeps day-level uniqueness)
  morning_in  DateTime? @db.Date
  lunch_out   DateTime? @db.Date
  lunch_in    DateTime? @db.Date
  lunch_in_remarks String?
  office_out  DateTime? @db.Date
  remarks     String?
  created_at  DateTime @default(now()) @db.Date

  @@unique([employee_id, date])
}

model AttendanceLog {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  employee_id String
  action      String
  timestamp   DateTime @default(now()) @db.Date
}
